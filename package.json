{
  "name": "mcp-filesystem-server",
  "version": "2.0.0",
  "description": "Generic MCP filesystem server with configurable security and comprehensive file operations",
  "main": "dist/index.js",
  "bin": {
    "mcp-filesystem-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "dev": "ts-node src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test:integration": "node test-full-flow.js",
    "version": "echo $npm_package_version"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "server",
    "file-operations",
    "model-context-protocol",
    "generic",
    "configurable",
    "secure"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
