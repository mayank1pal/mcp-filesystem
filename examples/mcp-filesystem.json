{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Filesystem Server Configuration",
  "description": "Configuration file for the MCP Filesystem Server",
  
  "allowedDirectories": [
    "~/Documents",
    "~/Downloads",
    "~/Desktop",
    "~/Projects"
  ],
  
  "securityLevel": "moderate",
  
  "maxFileSize": "10MB",
  
  "enableEnhancedTools": true,
  
  "allowedExtensions": ["*"],
  
  "blockedExtensions": [
    ".exe", ".bat", ".scr", ".com", ".pif",
    ".vbs", ".js", ".jar", ".app", ".dmg",
    ".deb", ".rpm", ".msi", ".pkg"
  ],
  
  "logLevel": "info",
  
  "logDestination": "console"
}